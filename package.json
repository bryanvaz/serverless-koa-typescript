{
  "name": "serverless-koa-typescript",
  "version": "1.0.0",
  "description": "Boilerplate for Serverless API on AWS using Koa, Typescript, Jest, Terraform, and CircleCI",
  "main": "server",
  "engines": {
    "node": ">=8.10"
  },
  "repository": "github:bryanvaz/serverless-koa-typescript",
  "author": "Bryan Vaz <bryanvaz@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --write \"src/**/*.ts\" && eslint --fix src/**/*.ts",
    "watch": "nodemon --watch server -e ts,tsx --exec ts-node server",
    "test": "cross-env jest --forceExit"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "dotenv": "^8.0.0",
    "koa": "^2.7.0",
    "koa-body": "^4.1.0",
    "koa-router": "^7.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.15",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^12.6.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-typescript": "^4.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.7",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
